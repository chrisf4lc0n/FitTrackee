# FitTrackee Sink Folder Stack - Environment Configuration
# Copy this file to .env and configure the values

# Docker volumes (optional - defaults to ./data subdirectories)
# export HOST_UPLOAD_DIR=./data/uploads
# export HOST_LOG_DIR=./data/logs
# export HOST_DATABASE_DIR=./data/db
# export HOST_STATICMAP_CACHE_DIR=./data/staticmap_cache
# export HOST_APP_PORT=5000

# Application
export FLASK_APP=fittrackee
export FLASK_SKIP_DOTENV=1
export APP_SECRET_KEY='please-change-this-to-a-secure-random-string'
export APP_LOG=/usr/src/app/logs/fittrackee.log
# export APP_WORKERS=1
# export APP_TIMEOUT=30
export UPLOAD_FOLDER=/usr/src/app/uploads
export STATICMAP_CACHE_DIR=/usr/src/app/.staticmap_cache

# PostgreSQL
export POSTGRES_USER=fittrackee
export POSTGRES_PASSWORD=fittrackee-password-change-me
export POSTGRES_DB=fittrackee
export DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@fittrackee-db:5432/${POSTGRES_DB}

# Redis (optional - for API rate limits and background tasks)
# export REDIS_URL=redis://redis:6379

# UI URL (required for emails)
export UI_URL=http://localhost:5000

# Emails (optional)
# export EMAIL_URL=smtp://user:password@smtp.example.com:587
# export SENDER_EMAIL=fittrackee@example.com

# Map tiles
# export TILE_SERVER_URL=https://tile.openstreetmap.org/{z}/{x}/{y}.png
# export MAP_ATTRIBUTION=

# Weather (optional)
# export WEATHER_API_PROVIDER=visualcrossing
# export WEATHER_API_KEY=your-api-key
